
@{
    ViewBag.Title = "Sorteio do Amigo Secreto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tem a certeza que quer inivciar o Sorteio do Amigo Secreto?</h2>

@using (Html.BeginForm(("Amigos", "TestarEnvioSMSConfirmado")))
{
    <div class="form-actions no-color">
        <input type="submit" value="Sortear Amigo Secreto" class="btn btn-success" />
        <a href="@Url.Action("Index", "Amigos")" class="btn btn-default"> Cancelar</a>
    </div>
}
